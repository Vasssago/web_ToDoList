@page
@model LoginModel

@{
	ViewData["Title"] = "Вход";
}

<link rel="stylesheet" href="~/css/Login.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto&family=Rowdies:wght@300&family=Russo+One&display=swap" rel="stylesheet">

<div class="container_main justify-content-center">
	<a class="logo_" asp-area="" asp-controller="Home" asp-action="Index">
		<svg width="41" height="41" viewBox="0 0 41 41" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect class="recta" width="41" height="41" rx="3" fill="#FF4F5A" />
			<rect x="15.375" y="10.25" width="21.7812" height="5.125" fill="white" />
			<rect x="15.375" y="19.2188" width="21.7812" height="5.125" fill="white" />
			<rect x="15.375" y="28.1875" width="21.7812" height="5.125" fill="white" />
		</svg>
		ToDo Daily
	</a>

	<h4>Войти</h4>

	<form id="account" method="post">
		<div class="div1 w_90">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating inp">
				<input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
				<label asp-for="Input.Email" class="form-label"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-floating inp">
				<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
				<label asp-for="Input.Password" class="form-label">Пароль</label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div>
				<div class="checkbox">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						Запомнить меня?
					</label>
				</div>
			</div>
			<div>
				<button id="login-submit" type="submit" class="w-100 button">Войти</button>
			</div>
		</div>
	</form>

	<div class="border-top line">
		<style>
			.line {
				margin: 20px 0 20px 0;
			}
		</style>
	</div>

	<p>
		У вас нет аккаунта?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Зарегистрироваться</a>
	</p>
	<p>
		Забыли пароль?<a id="forgot-password" asp-page="./ForgotPassword"> Восстановить</a>
	</p>
</div>

